
<div class="container">
 <h1 class='headings'>My tasks</h1>

 <div class="form">
  <h2>Task</h2>
  <div class="form-box">
    <%= form_for(task) do |f| %>
    <div class="item"
      <%= f.label :title %>
      <br>
      <%= f.text_field :title, class: "field field-title" %>
    </div>
    <div class="item">
      <%= f.label :details %>
      <br>
      <%= f.text_field :details, class: "field field-description" %>
    </div>
    <div class="item">
      <%= f.label :completed %>
      <%= f.check_box :completed, class: "check-box" %>
    </div>
    <div class="item button-submit">
      <%= f.submit class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to (raw("<i class='fas fa-arrow-circle-left'></i>Back to list")), tasks_path, :class => "btn btn-primary btn-create button" %>
</div>
